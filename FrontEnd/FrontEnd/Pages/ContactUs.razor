@page "/ContactUs"
<div class="custom-container py-5" id="ContactUs">
    <h2 class="custom-title text-center font-weight-bold mb-4">Contact Us</h2>
    <div class="custom-row">
        <div class="custom-col mx-auto">
            <div class="custom-card shadow-lg rounded-lg">
                <div class="custom-card-body">
                    <form>
                        <!-- Full Name -->
                        <div class="custom-form-group">
                            <label for="name" class="custom-label">Full Name</label>
                            <input type="text" class="custom-input" id="name" placeholder="Your Name" required>
                        </div>

                        <!-- Email Address -->
                        <div class="custom-form-group">
                            <label for="email" class="custom-label">Email Address</label>
                            <input type="email" class="custom-input" id="email" placeholder="Your Email" required>
                        </div>

                        <!-- Message -->
                        <div class="custom-form-group">
                            <label for="message" class="custom-label">Message</label>
                            <textarea class="custom-textarea" id="message" rows="5" placeholder="Your Message" required></textarea>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="custom-btn btn-block">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>